{
  "name": "CodeDesignPlus.Net.EventStore",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/CodeDesignPlus.Net.EventStore",
  "targets": {
    "restore": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet restore {projectRoot}/CodeDesignPlus.Net.EventStore.sln"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet format {projectRoot}/CodeDesignPlus.Net.EventStore.sln"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet build {projectRoot}/CodeDesignPlus.Net.EventStore.sln"
      },
      "configurations": {
        "production": {
          "command": "dotnet build {projectRoot}/CodeDesignPlus.Net.EventStore.sln --configuration Release"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet test {projectRoot}/CodeDesignPlus.Net.EventStore.sln"
      },
      "configurations": {
        "coverage": {
          "command": "dotnet test {projectRoot}/CodeDesignPlus.Net.EventStore.sln /p:CollectCoverage=true /p:CoverletOutputFormat=opencover"
        }
      }
    },
    "sonarqube": {
      "executor": "@koliveira15/nx-sonarqube:scan",
      "options": {
        "name": "CodeDesignPlus.Net.EventStore",
        "hostUrl": "https://sonarcloud.io/",
        "projectKey": "CodeDesignPlus.Net.EventStore",
        "organization": "codedesignplus",
        "skipTargetDefaults": false,
        "branches": false,
        "qualityGate": false,
        "qualityGateTimeout": "600",
        "skipImplicitDeps": false,
        "exclusions": "**Tests*.cs",
        "extra": {
          "sonar.cs.opencover.reportsPaths": "{projectRoot}/tests/CodeDesignPlus.Net.EventStore.Test/coverage.opencover.xml"
        }
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet pack {projectRoot}/CodeDesignPlus.Net.EventStore.sln --configuration Release /p:Version={args.version} --output dist/CodeDesignPlus.Net.EventStore"
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "dotnet nuget push dist/CodeDesignPlus.Net.EventStore/*.nupkg --source {args.source} --api-key {args.token}"
      }
    }
  }
}
