{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e",
          "restore",
          "format",
          "sonarqube",
          "pack",
          "push"
        ],
        "accessToken": "NTAzMmE4OGMtY2FjMC00ZmFiLTgwMzktOGE5NDQxNTcxODVlfHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "restore": {
      "executor": "nx:run-commands",
      "outputs": [],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^restore"],
      "options": {
        "command": "dotnet restore {projectRoot}/{projectName}.sln"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "outputs": [],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^format"],
      "options": {
        "command": "dotnet format {projectRoot}/{projectName}.sln"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/bin", "{projectRoot}/obj"],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^build"],
      "options": {
        "command": "dotnet build {projectRoot}/{projectName}.sln"
      },
      "configurations": {
        "production": {
          "command": "dotnet build {projectRoot}/{projectName}.sln --configuration Release"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/TestResults", "{projectRoot}/coverage"],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^test"],
      "options": {
        "command": "dotnet test {projectRoot}/{projectName}.sln"
      },
      "configurations": {
        "coverage": {
          "command": "dotnet test {projectRoot}/{projectName}.sln --configuration Release --no-build /p:CollectCoverage=true /p:CoverletOutputFormat=opencover"
        }
      }
    },
    "sonarqube": {
      "executor": "nx:run-commands",
      "outputs": [],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^sonarqube"],
      "options": {
        "args": "--org=codedesignplus --project={projectName} --server=https://sonarcloud.io/",
        "commands": [
          "dotnet test {projectRoot}/{projectName}.sln /p:CollectCoverage=true /p:CoverletOutputFormat=opencover",
          "dotnet sonarscanner begin /o:{args.org} /k:{args.project} /d:sonar.host.url={args.server} /d:sonar.coverage.exclusions=\"**/CodeDesignPlus.Net.Core/**,**/CodeDesignPlus.Net.Exceptions/**,**/CodeDesignPlus.Net.Security/**,**/CodeDesignPlus.Net.Serializers/**,**Tests*.cs\" /d:sonar.cs.opencover.reportsPaths={projectRoot}/tests/{projectName}.Test/coverage.opencover.xml",
          "dotnet build {projectRoot}/{projectName}.sln",
          "dotnet sonarscanner end"
        ],
        "parallel": false
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "outputs": ["dist/{projectName}"],
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^pack","build"],
      "options": {
        "command": "dotnet pack {projectRoot}/{projectName}.sln --configuration Release /p:IncludeSymbols=true /p:SymbolPackageFormat=snupkg /p:Version={args.version} --output dist/{projectName}"
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "inputs": ["default", "{projectRoot}/**/*", "sharedGlobals"],
      "dependsOn": ["^push", "pack"],
      "options": {
        "command": "dotnet nuget push dist/{projectName}/*.nupkg --source {args.source} --api-key {args.token}"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": []
  }
}